<h1>学習記録の登録</h1>

<% if @work.errors.present? %>
  <% @work.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_with(model: @work,local: true) do |f| %>
  <div class="form-group">
    <%= f.label "title",id: 'title' %>
    <%= f.select :material_id, @materials.map{ |material| [ material.title, material.id]}%>
  </div>
  <div class="form-group">
    <%= f.label "start",id: 'start' %>
    <%= f.text_field :start, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "finish",id: 'end' %>
    <%= f.text_field :finish, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "content",id: 'content' %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "status",id: 'status' %>
    <%= f.select :status, Work.statuses.keys.to_a, {}, class: "form-control" %>
  </div>
  <%= f.submit "登録する", class: "btn btn-primary" %>
<% end %>