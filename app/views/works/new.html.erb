<div class="container">
  <div class="card card-body bg-light">
    学習情報の登録
  </div>

  <div class="mt-4" >
    <% if @work.errors.present? %>
      <% @work.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4" >
    <%= form_with(model: @work,local: true) do |f| %>
      <div class="form-group">
        <%= f.label "title",id: 'title' %>
        <%= f.select :material_id, @materials.map{ |material| [ material.title, material.id]}, {include_blank: "教材を選択してください" }, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "do_on",id: 'do_on' %>
        <%= f.date_field :do_on, value: Date.today, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "start",id: 'start' %>
        <%= f.text_field :start, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "finish",id: 'finish' %>
        <%= f.text_field :finish, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "content",id: 'content' %>
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>