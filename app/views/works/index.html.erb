<div class="container">

  <div class="card">
    <div class="card-header"><%= t("view.work.summary") %></div>
    <div class="card-body">
      <div class="row">
        <div class="card-body" style="width: 15rem;">
          <h5 class="card-title">先月の登録回数</h5>
          <h5 class="card-text"><%= @last_month_work_count %>回</h5>
        </div>
        <div class="card-body" style="width: 15rem;">
          <h5 class="card-title">今月の登録回数</h5>
          <h5 class="card-text"><%= @current_month_work_count %>回</h5>
        </div>
        <div class="card-body" style="width: 15rem;">
          <h5 class="card-title">総計</h5>
          <h5 class="card-text"><%= @works.count %>回</h5>
        </div>
      </div>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-header"><%= t("view.work.calendar") %></div>
    <div class="card-body">
    <div id="calendar"></div>
  </div>
  </div>

  <div class="card mt-4">
    <div class="card-header"><%= t("view.work.index") %></div>
    <div class="card-body">
      <%= search_form_for @q, class: "form-inline" do |f| %>
        <div class="form-group mb-2">
          <%= f.label :do_on %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <%= f.date_field :do_on_gteq, include_blank: true, class: "form-control"  %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          〜
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <%= f.date_field :do_on_lteq, include_blank: true, class: "form-control"  %>
        </div>
        <%= f.submit t("view.material.refine"), class: 'btn btn-primary mb-2' %>
        <div class="form-group mx-sm-3 mb-2">
          <%= link_to t("view.material.clear"), url_for, class: "btn btn-primary", role: "button" %>
        </div>
      <% end %>

      <div class="mt-1" >
        <%= paginate @works, class: "paginate"  %>
        <%= page_entries_info @works %>
      </div>
    </div>

    <div class="mt-1" >
      <div class="table-responsive" >
        <table class="table  mb-0 text-nowrap">
          <thead class="thead-light">
          <tr>
            <th><%= t("activerecord.attributes.work.do_on") %></th>
            <th><%= t("activerecord.attributes.material.title") %></th>
            <th colspan="3"><%= t("view.work.amount") %></th>
          </tr>
          </thead>
          <tbody>
          <% @works.each do |work| %>
            <tr>
              <td><%= work.do_on %></td>
              <td><%= link_to work.material.title, material_path(work.material) %></td>
              <td><%= work.start %></td>
              <td>〜</td>
              <td><%= work.finish %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= stylesheet_link_tag "works", :media => "all" %>