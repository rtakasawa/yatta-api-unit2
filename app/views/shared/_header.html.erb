<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <div class="container">
      <a class="navbar-brand">
        <span class="navbar-brand mb-0 h1">Yatta</span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "教材一覧", materials_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "教材投稿", new_material_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "会員情報", user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "アカウントを登録する", new_user_registration_path,class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログインする", new_user_session_path,class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>

  <div class="container">
  <% if user_signed_in? %>
    <nav class="navbar navbar-light">
      <button type="button" class="btn btn-outline-primary btn-sm">
        <%= link_to "学習を記録する", new_work_path, class: "nav-link" %>
      </button>
      <span class="navbar-text">教材を検索してから登録する（書籍のみ）
      <%= form_tag('/materials/book_search', method: :get, class: "form-inline") do %>
        <%= text_field_tag :material, "",  id: "book_search", name: "keyword", placeholder: "search", class: "form-control mr-sm-2" %>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button></span>
      <% end %>
    </nav>
  <% end %>
</div>
</header>
