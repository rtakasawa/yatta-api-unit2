<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <div class="container">
      <a class="navbar-brand">
        <span class="navbar-brand mb-0 h1">Yatta</span>
      </a>
      <% if user_signed_in? %>
      <form class="form-inline">
        <%= link_to "学習を記録", new_work_path, class: "btn btn-sm ml-2 btn-outline-light" %>
        <%= link_to "教材を登録", new_material_path, class: "btn btn-sm ml-2 btn-outline-light" %>
      </form>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "教材一覧", materials_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "会員情報", user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "アカウントを登録する", new_user_registration_path,class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログインする", new_user_session_path,class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>

  <div class="container">
    <div class="mt-2" >
      <% if user_signed_in? %>
        <%= form_with url: book_search_materials_path, method: :get,class: "form-inline  ", local: true do |f| %>
          <div class="form-group mb-2 h7">
            <%= f.label "教材を検索してから登録する（書籍のみ）", class: "form-control-sm" %>
          </div>
          <div class="form-group mb-2">
            <%= f.text_field :material, name: "keyword", placeholder: "search", class: "form-control" %>
          </div>
          <button type="submit" class="btn btn-secondary mb-2 ml-2">search</button>
        <% end %>
      <% end %>
    </div>
  </div>
</header>